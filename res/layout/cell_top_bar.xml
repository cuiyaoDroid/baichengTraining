<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title"
    android:layout_width="fill_parent"
    android:layout_height="42dp"
    android:background="@drawable/bg_top"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/goback_btn"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/btn_top_back"
        android:scaleType="fitCenter"
        android:src="@drawable/button" />

    <TextView
        android:id="@+id/image_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
		android:textColor="@android:color/white"
		android:textSize="16sp"
		android:textStyle="bold"
		android:text="@string/app_name" />

    <ImageButton
        android:id="@+id/right_btn"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/img_btn_edit"
        android:scaleType="fitCenter"
        android:src="@drawable/button" />

<ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:indeterminateDrawable="@drawable/common_loading4"
        android:layout_toRightOf="@+id/image_title"
        android:maxHeight="16dip"
        android:maxWidth="16dip"
        android:minHeight="16dip"
        android:minWidth="16dip"
        android:visibility="gone" />
</RelativeLayout>